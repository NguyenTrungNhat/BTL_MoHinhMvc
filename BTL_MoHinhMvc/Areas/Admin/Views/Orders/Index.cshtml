@model IEnumerable<BTL_MoHinhMvc.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
    int tt = 1;
}

<h2>Quản lý đơn hàng</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @Class = "btn btn-primary fa fa-plus" })
</p>
<table class="table bg-secondary rounded table-bordered table-striped" id="dataTable">
    <thead>
        <tr>
            <th>
                TT
            </th>
            <th>
                OrderNumber
            </th>
            <th>
                UserName
            </th>
            <th>
                OrderDate
            </th>
            <th>
                OrderState
            </th>
            <th>
                ShipName
            </th>
            <th>
                ShipMobie
            </th>
            <th>
                ShipAddress
            </th>
            <th>
                ShipEmail
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @(tt++)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipMobie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipEmail)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.OrderNumber }, new { @Class = "btn btn-warning fa fa-pencil" })
                @Html.ActionLink(" ", "Details", new { id = item.OrderNumber }, new { @Class = "btn btn-info fa fa-info" })
                @Html.ActionLink(" ", "Delete", new { id = item.OrderNumber }, new { @Class = "btn btn-danger fa fa-trash" })
            </td>
        </tr>
        }
    </tbody>

</table>



@section Script1{

    <!-- Page level plugins -->
    <script src="/Assets/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/Assets/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="/Assets/jstb/demo/datatables-demo.js"></script>
}
