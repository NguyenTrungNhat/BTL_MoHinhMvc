@model List<BTL_MoHinhMvc.Models.Category>

<ul class="megamenu hb-megamenu">

    <li>
        <ul>
            @foreach (var item in Model.Where(x => x.ParentID == null))
            {
                var child = Model.Where(x => x.ParentID == item.CategoryNumber);
                var parentClass = child.Count() > 0 ? "class=dropdown-toggle data-toggle=dropdown" : "";
                <li class="dropdown">
                    <a href="/Home/ShopInCategory/@item.CategoryNumber" @parentClass>@item.CategoryName</a>
                    @if (child.Count() > 0)
                {
                    <ul class="dropdown-menu">
                        @foreach(var childItem in child)
                    {
                        <li><a href="/Home/ShopInCategory/@childItem.CategoryNumber">@childItem.CategoryName</a></li>
                    }
                    </ul>
                }
                </li>
            }
        </ul>
    </li>
</ul>

