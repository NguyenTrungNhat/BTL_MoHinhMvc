@model List<BTL_MoHinhMvc.Models.CartItem>

<li class="hm-minicart">
    <div class="hm-minicart-trigger">
        <span class="item-icon"></span>
        <span class="item-text">
            <span style="top: -11px;" class="cart-item-count">@Model.Count</span>
        </span>
    </div>
    <span></span>
    <div class="minicart">
        <ul class="minicart-product-list">
            @if(Model.Count > 0)
            {
                for(int i = 0; i < Model.Count; i++)
                {
                    <li>
                        <a href="single-product.html" class="minicart-product-image">
                            <img src="~/FileUpload/@Model[i].Product.Pimage" alt="cart products">
                        </a>
                        <div class="minicart-product-details">
                            <h6><a href="single-product.html">@Model[i].Product.Pname</a></h6>
                            <span>@Model[i].Product.Price x @Model[i].Quantity</span>
                        </div>
                        <button class="close" title="Remove">
                            <i class="fa fa-close"></i>
                        </button>
                    </li>
                    if (i == 1)
                    {
                        break;
                    }
                }
            }
            else
            {

            }
        </ul>
        @*<p class="minicart-total">Tổng: <span>£80.00</span></p>*@
        <div class="minicart-button">
            <a href="~/Cart/Index" class="li-button li-button-fullwidth li-button-dark">
                <span>Giỏ Hàng</span>
            </a>
            <a href="~/Cart/Payment" class="li-button li-button-fullwidth">
                <span>Thanh Toán</span>
            </a>
        </div>
    </div>
</li>
